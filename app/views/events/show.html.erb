<p class='field'>
  <label>タイトル:</label>
  <div class='disp-form'>
    <%= @event.title %>
  </div>
</p>

<p class='field'>
  <label>開始:</label>
  <div class='disp-form'>
    <%= @event.start_date.strftime("%m/%d %H:%M") %>
  </div>
</p>

<p class='field'>
  <label>終了:</label>  
  <div class='disp-form'>
    <%= @event.end_date.strftime("%m/%d %H:%M") %>
  </div>
</p>


<%= link_to '変更', edit_event_path(@event), class: 'action-btn' %> |
<%= link_to '戻る', events_path, class: 'action-btn' %>
