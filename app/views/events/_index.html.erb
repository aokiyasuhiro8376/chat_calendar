<%= render './shared/header' %>

<div class='leftbar'>
  <div class='today-todo'>今日の予定</div>

  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>開始</th>
        <th>終了</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_date.strftime("%m/%d %H:%M") %></td>
          <td><%= event.end_date.strftime("%m/%d %H:%M") %></td>
          <td><%= link_to '表示', event %></td>
          <td><%= link_to '変更', edit_event_path(event) %></td>
          <td><%= link_to '消去', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'イベント追加', new_event_path, room_id: @room.id, class: 'event-link' %>

  <div id= "calendar" ></div>
  
</div>

