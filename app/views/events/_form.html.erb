<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title, class: 'input-form' %>
  </div>

  <div class="field">
    <%= form.label :説明 %>
    <%= form.text_area :description, class: 'input-form' %>
  </div>

  <div class="field">
    <%= form.label :開始 %>
    <%= form.datetime_select :start_date, class: 'input-form' %>
  </div>

  <div class="field">
    <%= form.label :終了 %>
    <%= form.datetime_select :end_date, class: 'input-form' %>
  </div>

  <div class="actions">
    <%= form.submit :イベント追加, class: 'event-link'%>
    <% link_to%>
  </div>
<% end %>
