<%= render "shared/header"%>

<div class="today">
  <div class='today-todo'>今日の予定</div>
    <%= link_to 'イベント追加', new_event_path, class: 'event-link' %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>開始</th>
      <th>終了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <%# .strftime('%H:%M')  %>
        <td><%= link_to '表示', event %></td>
        <td><%= link_to '変更', edit_event_path(event) %></td>
        <td><%= link_to '消去', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id= "calendar" ></div>

