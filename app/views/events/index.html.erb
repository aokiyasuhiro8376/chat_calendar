<p id="notice"><%= notice %></p>

<div class="today">
  <div class='today-todo'>今日の予定</div>
    <%= link_to 'イベント追加', new_event_path, class: 'event-link' %>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>開始</th>
      <th>終了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.start.strftime('%H:%M') %></td>
        <td><%= event.end.strftime('%H:%M') %></td>
        <td><%= link_to '表示', event %></td>
        <td><%= link_to '変更', edit_event_path(event) %></td>
        <td><%= link_to '消去', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<div id="calendar"></div>

