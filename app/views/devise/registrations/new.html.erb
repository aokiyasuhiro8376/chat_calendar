<div class='sign_title'>新規登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form' %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :image, class: 'form' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 最小文字数)</em>
    <% end %><br >
    <%= f.password_field :password, autocomplete: "new-password", class: 'form' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form' %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
