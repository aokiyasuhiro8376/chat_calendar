<%= render 'shared/header' %>

<h3>ユーザー詳細</h3>

<div class='room_select'>
  <% if user_signed_in? %>
    <% unless @user.id == current_user.id %>
      <% if @isRoom == true %>
        <%= link_to "チャットへGo!", room_path(@roomId), id: "dm_submit" %>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, :value=> @user.id %>
          <% end %>
          <%= f.submit "チャットを始める", id: "dm_submit" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "ユーザー一覧に戻る", users_path %>
