<div class='room_select'>
  <% if user_signed_in? %>
    <% unless @user.id == current_user.id %>
      <% if @isRoom == true %>
        <%= link_to "チャットへGo!", id='dm_submit', room_path(@roomId) %>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, :value=> @user.id %>
          <% end %>
          <%= f.submit "チャットを始める", id='dm_submit' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

